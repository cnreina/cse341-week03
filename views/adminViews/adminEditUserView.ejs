<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../includes/headInclude.ejs') %>
  </head>
    <body>
        <%- include('../includes/navigationInclude.ejs') %>
        <main class="centered">
            <% if (user) { %>
                <div class="grid">
                    <article class="card item">
                        <form class="item-form" action="/admin/update-user" method="POST">
                            <div class="form-control">
                                <label for="name">Name</label>
                                <input type="text" name="name" id="name" value="<%= user.name %>">
                            </div>
                            <div class="form-control">
                                <label for="email">Email</label>
                                <input type="text" name="email" id="email" value="<%= user.email %>">
                            </div>
                            <div class="form-control">
                                <label for="role">Role</label>
                                <input type="text" name="role" id="role" value="<%= user.role %>">
                            </div>
                            <div class="form-control">
                                <button class="btn" type="submit">Update User</button>
                            </div>
                        </form>
                    </article>
                </div>
            <% } else { %>
                <h1>No User Found!</h1>
            <% } %>
        </main>
    </body>
</html>
