<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../includes/headInclude.ejs') %>
  </head>
    <body>
        <%- include('../includes/navigationInclude.ejs') %>
        <main class="centered">
            <div class="grid">
                <article class="card item">
                    <form class="item-form" action="/admin/save-newitem" method="POST">
                        <div class="form-control">
                            <label for="name">Name</label>
                            <input type="text" name="name" id="name" value="">
                        </div>
                        <div class="form-control">
                            <label for="imageUrl">Image URL</label>
                            <input type="text" name="imageUrl" id="imageUrl" value="">
                        </div>
                        <div class="form-control">
                            <label for="price">Price</label>
                            <input type="number" name="price" id="price" step="0.01" value="">
                        </div>
                        <div class="form-control">
                            <label for="description">Description</label>
                            <textarea name="description" id="description" rows="5"></textarea>
                        </div>
                        <div class="form-control">
                            <label for="tags">Tags</label>
                            <textarea name="tags" id="tags" rows="2"></textarea>
                        </div>
                        <div class="form-control">
                            <button class="btn" type="submit">Save New Item</button>
                        </div>
                    </form>
                </article>

            </div>
        </main>
    </body>
</html>
